<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bernal.gilberto.len_timer.MainActivity">
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get In Date"
        android:id="@+id/b_pick"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Out Date"
        android:id="@+id/b_pick1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/b_pick"
        android:layout_toEndOf="@+id/b_pick"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/tv_datetimeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_pick"
        android:layout_alignStart="@+id/b_pick"
        android:layout_below="@+id/b_pick"
        android:layout_marginTop="84dp"
        android:text="i" />
    <TextView
        android:id="@+id/tv_datetimeOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o"
        android:layout_alignBaseline="@+id/tv_datetimeInput"
        android:layout_alignBottom="@+id/tv_datetimeInput"
        android:layout_alignLeft="@+id/b_pick1"
        android:layout_alignStart="@+id/b_pick1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

</RelativeLayout>
